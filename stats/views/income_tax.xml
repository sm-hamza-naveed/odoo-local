<?xml version='1.0' encoding='UTF-8'?>
<odoo>
   <record id="view_incometax_slab_tree" model= "ir.ui.view">
        <field name="model">incometax.slab</field>
        <field name="arch" type="xml">
            <tree>
                <field name="slab"/>
                <field name="yr_start_limit"/>
                <field name='yr_end_limit'/>
                <field name="ded_type"/>
                <field name="amount"/>
                <field name="exc_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_incometax_slab_form" model= "ir.ui.view">
        <field name="name">Income Tax</field>
        <field name="model">incometax.slab</field>
        <field name="arch" type="xml">
            <form duplicate="0">
                <sheet>
                    <group>
                        <group>
                            <field name="slab"/>
                            <field name="yr_start_limit"/>
                            <field name='yr_end_limit'/>
                        </group>
                        <group>
                            <field name="amount"/>  
                            <field name="exc_amount"/>
                            <field name="ded_type"/>  
                        </group>   
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_income_tax_slab">
        <field name = "name">Income Tax</field>
        <field name = "type">ir.actions.act_window</field>
        <field name= "res_model">incometax.slab</field>
        <field name = "view_mode">tree,form</field>
        <field name= "context">{}</field>
        
    </record>
    <menuitem id='menu_incometax_slab'
              parent="hr_payroll.menu_hr_salary_configuration"
              action="action_income_tax_slab"
              name="Income Tax Slab"/> 
</odoo> 