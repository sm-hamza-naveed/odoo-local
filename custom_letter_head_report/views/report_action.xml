<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="paperformat_custom_letter_head_report"
            model="report.paperformat">
        <field name="name">Custom Letter Head A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">43</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_custom_letter_head_report" model="ir.actions.report">
        <field name="name">Custom Letter Head Report</field>
        <field name="type">ir.actions.report</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_letter_head_report.report_letter_head</field>
        <field name="report_file">custom_letter_head_report.report_letter_head</field>
        <field
            name="binding_model_id"
            ref="account.model_account_move"
        />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="custom_letter_head_report.paperformat_custom_letter_head_report" />        
    </record>

</odoo>
