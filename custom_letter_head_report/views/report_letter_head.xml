<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="report_letter_head">
        <t t-foreach="docs" t-as="doc">
            <!--<t t-call="web.html_container">-->
                <t t-call="web.basic_layout">
                    <style>
                        body {
                            font-family: Arial, sans-serif;
                            margin: 0;
                            box-sizing: border-box;
                        }
    
                        .invoice-container {
                            padding: 10px;
                            clear: right;
                            padding-bottom: 0px;
                        }
    
                        h1 {
                            text-align: center;
                            color: #95b3d7;
                        }
    
                        .invoice-header, .bill-to, .invoice-total, .bank-details {
                            margin-bottom: 20px;
                        }
    
                        .invoice-header {
                            display: -webkit-box;
                            display: flex;
                            -webkit-box-pack: justify;
                            width: 100%;
                            
                        }
    
                        .invoice-details {
                            text-align: center;
                            width: 30%;
                            float: right;
                        }
    
                        .bill-to {
                            background-color: #e0e4f4;
                            width: 30%;
                            padding: 10px;
                        }
    
                        .bill-to p {
                            margin: 5px 0;
                        }
    
                        .invoice-table {
                            width: 100%;
                            border-collapse: collapse;
                            margin-bottom: 20px;
                            padding: 10px;
                        }
    
                        .invoice-table th {
                            padding: 10px;
                            text-align: left;
                            border: 1px solid black;
                            background-color: #e0e4f4;
                        }
                        
                        .invoice-table td {
                            padding: 10px;
                            border-left: 1px solid black;
                            border-right: 1px solid black;
                            text-align: left;
                        }
    
    
                        .bank-details p {
                            margin: 5px 0;
                        }
    
                        .contact-container {
                            display: -webkit-box;
                            display: flex;
                            justify-content: space-between;
                            background-color: #fff;
                            margin-top:490px;
                        }
    
                        .contact-box {
                            <!--font-size: 10px;-->
                            -webkit-box-flex: 1;
                            -webkit-flex: 1;
                            flex: 1;
                            border: 1px solid #000;
                            background-color: #008080;
                            color: #fff;
                            box-sizing: border-box;
                            padding: 0 5px;
                            margin: 0 auto;
                        }
    
                        .contact-box.orange {
                            background-color: #ff8c00;
                        }
    
                        .contact-box a {
                            color: #fff;
                            text-decoration: underline;
                        },
                          
                
                        
                    </style>
                    <div class="page">
                        <div class="oe_structure"/>
                        <div style="float: right;">
                            <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" style="width: 120px; height:120px;" alt="Logo"/>
                        </div>
                       
                        <div class="invoice-container">
                            <hr style="background-color: #f0a464"/>
                            <h1>INVOICE</h1>
                            <div>
                              
                              <div class="invoice-details">
                                  <table class="invoice-table">
                                    <thead>
                                        <tr>
                                            <th>INVOICE #</th>
                                            <th>DATE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="border: 1px solid black">
                                            <td><span t-esc="doc.name"/></td>
                                            <td><span t-esc="doc.invoice_date"/></td>
                                        </tr>
                                    </tbody>
                                  </table>
                              
                              </div>
                              <div>
                                <div class="bill-to">
                                  <strong>BILL TO</strong>
                                </div>
                                 <p><span t-esc="doc.partner_id.name"/><br/>
                                  <span t-esc="doc.partner_id.contact_address"/><br/>
                                  <span t-esc="doc.partner_id.mobile or doc.partner_id.phone"/><br/>
                                  <!--<span t-esc="doc.partner_id.phone"/><br/>-->
                                  </p>
                                </div>
                            </div>
                            <table class="invoice-table">
                                <thead>
                                    <tr>
                                        <th>DESCRIPTION</th>
                                        <th>AMOUNT</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  <t t-foreach="doc.invoice_line_ids" t-as="line">
                                      <!--<p t-esc="line"/>-->
                                      <tr style="border: 1px solid black">
                                        <td><span t-esc="line.product_id.name"/></td>
                                        <td><span t-esc="line.price_unit"/></td>
                                      </tr>
                                  </t>
                                     <tr style="border: 1px solid black">
                                     <td>
                                       <div>
                                         <span style="font-style: italic;">
                                           Thank you for your business!
                                         </span>
                                         <span style="float: right;">Total</span>
                                       </div>
                                       </td>
                                     <td><span t-esc="doc.amount_total"/></td>
                                     </tr>
                                </tbody>
                            </table>
                            <!--<div class="invoice-total">-->
                            <!--    <p class="thank-you">Thank you for your business!</p>-->
                            <!--    <strong>TOTAL</strong>-->
    
                            <!--</div>-->
                            <div class="bank-details">
                                <strong>Bank Details:</strong>
                                <p>Bank Name: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;United Bank Ltd<br/>
                                Account Title: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;H and H Solutions<br/>
                                Account No: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;279939638<br/>
                                Branch: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Model Colony Branch<br/>
                                IBAN: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;PK08UNIL0109000279939638<br/>
                                Swift Code: &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;UNILPKKA</p>
                            </div>
                                <!--<p>Footer</p>-->
                              <div class="contact-container">
                                <!--<p>Footer</p>-->
                                <div class="contact-box">
                                    <p>Email:<a href="mailto:hassan@hnhsolutions.online">hassan@hnhsolutions.online</a></p>
                                    <p>Website:<a href="http://www.hnhsolutions.online">www.hnhsolutions.online</a></p>
                                </div>
                                <div class="contact-box orange">
                                    <p>Mobile: +923 362289418</p>
                                    <p>Phone: 021-34172153</p>
                                </div>
                                <div class="contact-box">
                                    <p>Address: Penthouse, Plot # 1<br/>
                                    Block B, ShaheedMakhdoomBilawal<br/>
                                    KDA Scheme 33, Karachi</p>
                                </div>
                            </div>
                        </div>  
                    </div>
                </t>
            </t>
    </template>
</odoo>