<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
        <record id="resource_calendar_form_inherit_policies" model="ir.ui.view">
        <field name="name">resource.calendar.form.inherit-policies</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='working_hours']//field[@name='two_weeks_calendar']" position="after">
                <group>
                    <field name="shift_type"/>
                </group>
                <group string="Late Policy">
                    <field name="late_in_policy" options="{'no_create': True}"/>
                </group>
                <group string="Early Out Policy">
                    <field name="early_out_policy" options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>