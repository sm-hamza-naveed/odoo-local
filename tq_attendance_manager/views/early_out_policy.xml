<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_early_policy_form" model="ir.ui.view">
        <field name="name">early.policy.form</field>
        <field name="model">early.policy</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                </group>
                <field name="out_policy_ids">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="apply_after" widget="float_time"/>
                        <field name="rate"/>
                        <field name="status"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="view_early_policy_tree" model="ir.ui.view">
        <field name="name">early.policy.tree</field>
        <field name="model">early.policy</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_early_policy" model="ir.actions.act_window">
        <field name="name">Early Policy</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">early.policy</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem name="Early Out Policy"
              id="early_out_policy_menu"
              sequence="12"
              parent="tq_attendance_manager.attendance_policy_menu"
              action="action_early_policy"/>
</odoo>