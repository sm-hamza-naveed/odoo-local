<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="paperformat_cash_memo_report"
            model="report.paperformat">
        <field name="name">European A4</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">43</field>
        <field name="dpi">90</field>
    </record>

    <record id="action_cash_memo_report" model="ir.actions.report">
        <field name="name">Cash Memo Report</field>
        <field name="type">ir.actions.report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cash_memo_report.report_cash_memo</field>
        <field name="report_file">cash_memo_report.report_cash_memo</field>
        <field
            name="binding_model_id"
            ref="sale.model_sale_order"
        />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="cash_memo_report.paperformat_cash_memo_report" />        
    </record>

    <record id="action_load_pass_report" model="ir.actions.report">
        <field name="name">Load Pass Report</field>
        <field name="type">ir.actions.report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">cash_memo_report.load_pass_report</field>
        <field name="report_file">cash_memo_report.load_pass_report</field>
        <field
            name="binding_model_id"
            ref="sale.model_sale_order"
        />
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="cash_memo_report.paperformat_cash_memo_report" />        
    </record>
</odoo>
